<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/page_two"
        android:alpha="0.7">


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Vilnius  is the capital of Lithuania and its largest city, with a population of 542,664 as of 2015. Vilnius is located in the southeast part of Lithuania and is the second largest city in the Baltic states."
        android:id="@+id/textView2"
        android:textColor="#880909"
        android:textStyle="bold"
        android:textIsSelectable="true"
        android:textSize="20dp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAlignment="gravity"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous"
        android:id="@+id/pTwoPrevious"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="450dp"
        android:typeface="serif"
        android:background="#09f2d7"
        android:padding="10dp"
        android:textSize="20dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vilnius"
        android:id="@+id/textView"
        android:textSize="40dp"
        android:textColor="#ff0000"
        android:alpha="1.5"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginLeft="100dp"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/pTwoNext"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="270dp"
        android:typeface="serif"
        android:textColor="#000000"
        android:background="#25d8eb"
        android:padding="10dp"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:id="@+id/p2Button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp" />

</RelativeLayout>
