<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/page_three"
        android:scaleType="centerCrop"
        android:adjustViewBounds="false"
        android:alpha="0.5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tallinn"
        android:id="@+id/textView5"
        android:textColor="#f10202"
        android:typeface="serif"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:textSize="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Tallinn is the capital and largest city of Estonia.Tallinn&apos;s Old Town is listed as a UNESCO World Heritage Site.It is ranked as a global city and has been listed among the top 10 digital cities in the world.The city was a European Capital of Culture for 2011, along with Turku in Finland."
        android:id="@+id/textView4"
        android:typeface="serif"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="110dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textIsSelectable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous"
        android:id="@+id/pThreePrevious"
        android:background="#04e7df"
        android:typeface="serif"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="450dp"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/pThreeNext"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="450dp"
        android:padding="10dp"
        android:textColor="#000000"
        android:background="#07def2"
        android:textSize="20dp"
        android:typeface="serif" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="location"
        android:id="@+id/p3Button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="370dp" />
</RelativeLayout>